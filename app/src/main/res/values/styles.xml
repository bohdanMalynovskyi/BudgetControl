<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlueMediumTextStyle">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="WhiteMediumTextStyle">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="YellowMediumTextStyle">
        <item name="android:textColor">@color/primary_yellow</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BlueRegularTextStyle">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="WhiteRegularTextStyle">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="YellowRegularTextStyle">
        <item name="android:textColor">@color/primary_yellow</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="DateTextViewStyle" parent="BlueMediumTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/light_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="YellowMoneyNumberTextViewStyle" parent="YellowMediumTextStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_text_view_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_1_25</item>
    </style>
</resources>