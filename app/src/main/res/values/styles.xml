<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DateTextViewStyle" parent="TextViewStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">40dp</item>
            <item name="android:background">@drawable/budget_fragment_date_text_view_background</item>
            <item name="android:gravity">center</item>
            <item name="android:paddingHorizontal">10dp</item>
            <item name="android:textSize">20sp</item>
    </style>

    <style name="YellowMoneyNumberTextViewStyle">
        <item name="android:textColor">@color/primary_yellow</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>